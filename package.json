{
  "name": "po_playwright",
  "version": "1.0.0",
  "description": "Experimenting and testing",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "bunx playwright test",
    "test:bun": "bun test",
    "test:ui": "NODE_NO_WARNINGS=1 playwright test --ui",
    "test:headed": "NODE_NO_WARNINGS=1 playwright test --headed",
    "test:debug": "NODE_NO_WARNINGS=1 playwright test --debug",
    "test:lightpanda": "NODE_NO_WARNINGS=1 playwright test --project=lightpanda",
    "test:chromium": "NODE_NO_WARNINGS=1 playwright test --project=chromium",
    "test:firefox": "NODE_NO_WARNINGS=1 playwright test --project=firefox",
    "test:webkit": "NODE_NO_WARNINGS=1 playwright test --project=webkit",
    "knip": "knip",
    "test:shard": "playwright test --shard=1/4",
    "format": "biome format --write app pages fixtures tests tests-examples",
    "format:check": "biome format app pages fixtures tests tests-examples",
    "lint": "biome lint app pages fixtures tests tests-examples",
    "lint:fix": "biome lint --write app pages fixtures tests tests-examples",
    "check": "biome check app pages fixtures tests tests-examples",
    "check:fix": "biome check --write app pages fixtures tests tests-examples",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "@irookanji",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@playwright/test": "1.56.1",
    "@types/node": "24.9.1",
    "husky": "9.1.7",
    "knip": "5.66.3",
    "lint-staged": "16.2.6",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome check --write",
      "git add"
    ]
  }
}
